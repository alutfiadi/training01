<mvc:View
    controllerName="training01.controller.Home"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage id="page">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Airlines" />
                </f:heading>
                <f:expandedContent>
                    <Label
                        id="expandedLabel"
                        text="No Filter"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="snappedLabel"
                        text="No Filter"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterBar"
                        useToolbar="false"
                        search=".onFilter"
                        showFilterConfiguration="false"
                        showClearOnFB="true"
                        clear=".onClearFB"
                        filterChange=".onFilterChange"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="FGSearch"
                                label="Search Carrier"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        id="searchCarrier"
                                        showSearchButton="false"
                                        change=".onSelectionChange"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="Currency"
                                label="Currency"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="filterCurrency"
                                        placeholder="Select Currency"
                                        selectionChange=".onSelectionChange"
                                        items="{
												path: 'flight>/CurrencyCodeValueHelpSet',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{flight>CurrencyCode}"
                                            text="{flight>CurrencyCode}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="carrierTable"
                inset="false"
                items="{    
                            path: 'flight>/CarrierSet', 
                            sorter : { path : 'CarrierId' } 
                        }"
                growing="true"
                growingThreshold="20"
                mode="SingleSelectLeft"
            >
                <BusyDialog id="carrierBusyDialog" />
                <headerToolbar>
                    <OverflowToolbar id="otbSubheader">
                        <Title
                            id="titleCarrier"
                            text="Airlines"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            id="addButton"
                            text="Create"
                            type="Transparent"
                            press=".onCarrierAdd"
                        />
                        <Button
                            id="btnDelete"
                            text="Delete"
                            type="Reject"
                            press=".onCarrierDelete"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="8rem">
                        <Text text="Airlines ID" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Airlines" />
                    </Column>
                    <Column
                        width="8rem"
                        hAlign="Center"
                    >
                        <Text text="Currency" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        width="12rem"
                    >
                        <Text text="Created By" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Created Date" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle" 
                        type="Navigation"
                        press=".onCarrierDetail">
                        <cells>
                            <ObjectIdentifier title="{flight>CarrierId}" />
                            <Text text="{flight>Name}" />
                            <Text text="{flight>CurrencyCode}" />
                            <Text text="{flight>LocalCreatedBy}" />
                            <Text
                                text="{ 
                                            path:'flight>LocalCreatedAt',  
                                            type: 'sap.ui.model.odata.type.Date',
                                            formatOptions: {  
                                                pattern : 'dd MMM yyyy'
                                            }
                                        }"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
